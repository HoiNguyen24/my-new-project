function bai1(){
    let x =+prompt("nhap so a");
    let y =+prompt("nhap so b");
    if(x % y == 0) alert("Yes");
    else alert("No");
}
function bai2 (){
    let x =+prompt("nhap so tuoi hoc sinh");
    if( x < 16) alert("khong du tuoi hoc cap ba");
    else alert("du tuoi hoc cap ba");
}
