    function bai4 (){
    let a =+prompt("nhap a");
    let b =+prompt("nhap b");
    let c =+prompt("nhap c");
    let max = a;
    if( b > max ) max = b;
    else if( c > max ) max = c;
    alert(max);

    }
    function bai5(){
    let diem1 = +prompt("nhap diem kiem tra");
    let diem2 =+prompt("nhap diem giua ki");
    let diem3 =+prompt("nhap diem cuoi ki");
    let trungbinh = (diem1 + diem2*2+ diem3*3)/3;
    if( trungbinh >= 8.0) alert("gioi");
    else if( trungbinh >= 6.5) alert("kha");
    else if( trungbinh >= 5.0) alert("trung binh");
    else alert("yeu");
}
function bai6 (){
    let x =+ prompt("nhap doanh so ban hang");
    let k =+ prompt("nhap gia san pham");
    let y = 0;
    if(x > 10000) {y = x*0.1*k;}
    else if ( x < 10000 && x >= 3000 ) {
        y = x*0.05*k;
    }
    else y = 0.01*x*k;
}
function bai7(){
    let x =+ prompt("so phut cuoc goi");
    let S;
    if(x <= 50) S = x*500;
    else if( x <= 100) S = 50*500 + (x-50)*400;
    else (x > 100)  S = 50*500 + 50*1000 + (x-100)*300;
    alert(S);
}
