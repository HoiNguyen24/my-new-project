function bai1(){
    let x = prompt("nhap do muon nhap");
    let t =+prompt("nhap nhiet do");
    if( x == 'C' || x=='c')
    alert(x*9/5+32);
    else if(x =='F' || x=='f')
        alert((x-32)*5/9);
}
function bai6(){
   let a =+prompt("nhap a");
   let b =+prompt("nhap b");
   if( a == 0) {
       if( b == 0) alert("phuong trinh vo so nghiem");
       else alert("  vo nghiem");
   }
   else{
       let x = -b/a;
       alert(x);
   }
}
function bai7(){
    let a =+prompt("nhap a");
    let b =+prompt("nhap b");
    let c =+prompt("nhap c");
    if(a ==0){
        if( b == 0) {
            if( c == 0) alert("phuong trinh vo so nghiem");
            else alert("  vo nghiem");
        }
        else{
            let x = -b/a;
            alert(x);
        }
    }
    else{
        let delta = b*2 - 4*a*c;
        if( delta < 0) alert("phuong trinh vo nghiem");
        else if( delta ==0) {
            let x = -b/(2*a);
            alert(x);
        }
        else{
            let x1 = (-b + sqrt(delta))/(2*a);
            let x1 = (-b - sqrt(delta))/(2*a);
            alert("x1 = " + x1);
            alert("x2 =" + x2);
        }
    }
}
function bao8 (){
    let age = +prompt("nhap tuoi x");
    if(age < 120 && age > 0) alert("la tuoi cua nguoi");
    else    alert("khong la tuoi cua nguoi");
}
function bai9(){
    let x =+ prompt("nhap a");
    let y =+ prompt("nhap b");
    let z = +prompt("nhap c");
    if( x > 0 && y > 0 && z >0 && x+y > z && x+z > y && y+z > x) alert("la tam giac");
    else alert("khong la tam giac");
}
function bai10(){
    let x =+prompt("nhap so dien tieu thu");
    if( x < 50) alert(x*1700);
    else if( x <= 100) alert(50*1700+(x-50)*2500);
    else if( x > 100) alert(50*1700+50*2500+(x-100)*3500);
}
